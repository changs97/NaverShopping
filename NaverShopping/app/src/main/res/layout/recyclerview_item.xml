<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/naver_shopping_icon"
            android:id="@+id/item_imageview_product"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:id="@+id/item_textview_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제품명"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/item_textview_product_mall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="브랜드"/>
            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:id="@+id/item_textview_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가격"/>



        </LinearLayout>
        <Button
            android:id="@+id/item_btn_get_uri"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/cardview_light_background"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="BUY"/>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>


</LinearLayout>